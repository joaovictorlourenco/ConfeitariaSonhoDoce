---
interface Props {
  title: string;
  description: string;
  image?: string;
}

const {
  title = "Sonho Doce - Confeitaria Artesanal",
  description = "A Sonho Doce é uma confeitaria artesanal que oferece bolos, doces e sobremesas para todas as ocasiões. Fazemos tudo com muito amor e carinho para que você tenha a melhor experiência.",
  image = "/public/assets/logo.png",
} = Astro.props;
---

<!-- SEO -->
<link rel="canonical" href={Astro.url.href} />
<meta name="description" content={description} />

<!-- Open Graph -->
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(image, Astro.site)} />
<meta property="og:url" content={Astro.url.href} />
<meta property="og:type" content="website" />
<meta property="og:locale" content="pt_BR" />

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={new URL(image, Astro.site)} />
<meta name="twitter:url" content={Astro.url.href} />
