---
import boloCorte from "@/assets/bolo-de-corte.png";
import bolo from "@/assets/bolo.jpeg";
import brigadeiroImg from "@/assets/brigadeiro.jpg";
import copinhoSobremesa from "@/assets/copinho-sobremesa.jpeg";
import copinhosImg from "@/assets/copinho.png";
import trufaImg from "@/assets/trufa.jpeg";
import { Image } from "astro:assets";
import { Card, CardContent } from "../ui/card";

const products = [
  {
    name: "Brigadeiros Gourmet",
    description:
      "Brigadeiros artesanais com diversos sabores e coberturas especiais",
    image: brigadeiroImg,
    alt: "Bandeja com brigadeiros gourmet artesanais boleados com confeitos variados, incluindo chocolate belga, granulado e castanhas.",
  },
  {
    name: "Bolos de Festa",
    description: "Bolos personalizados para todas as ocasiões especiais",
    image: bolo,
    alt: "Bolo de festa alto e decorado com cobertura cremosa e acabamento sofisticado, ideal para aniversários e celebrações.",
  },
  {
    name: "Copinhos de Chocolate",
    description:
      "Copinhos de chocolate recheados com deliciosos cremes e coberturas",
    image: copinhosImg,
    alt: "Copinhos de chocolate nobre recheados com mousse cremoso e decorados com frutas frescas e raspas de chocolate.",
  },
  {
    name: "Trufas",
    description: "Trufas finas com sabores variados e acabamento sofisticado",
    image: trufaImg,
    alt: "Trufas finas de chocolate com acabamento brilhante e textura aveludada, exibindo recheio cremoso.",
  },
  {
    name: "Copinhos de Sobremesa",
    description: "Copinhos de Sobremesa artesanais com recheios irresistíveis",
    image: copinhoSobremesa,
    alt: "Copinho de sobremesa individual transparente mostrando camadas intercaladas de creme, bolo e recheio generoso.",
  },
  {
    name: "Bolo de Corte",
    description: "Bolo de Corte macio e delicioso",
    image: boloCorte,
    alt: "Fatia de bolo de corte servida no prato, destacando a massa fofinha e camadas úmidas de recheio.",
  },
];
---

<section id="produtos" class="py-20 lg:py-32 bg-muted/30">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center space-y-4 mb-16">
      <p class="text-sm font-mono text-primary uppercase tracking-wider">
        Nossos Produtos
      </p>
      <h2 class="text-4xl sm:text-5xl font-bold text-balance">
        Delícias que vão te conquistar
      </h2>
      <p
        class="text-lg text-muted-foreground max-w-2xl mx-auto leading-relaxed"
      >
        Conheça nossa seleção de doces artesanais, preparados diariamente com
        ingredientes frescos e muito carinho
      </p>
    </div>

    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        products.map((product, index) => (
          <Card
            key={index}
            className="overflow-hidden border-border/50 hover:shadow-lg transition-shadow"
          >
            <div class="aspect-square overflow-hidden bg-muted">
              <Image
                src={product.image}
                alt={product.alt}
                class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
              />
            </div>
            <CardContent className="p-6 space-y-2">
              <h3 class="text-xl font-bold">{product.name}</h3>
              <p class="text-muted-foreground leading-relaxed">
                {product.description}
              </p>
            </CardContent>
          </Card>
        ))
      }
    </div>
  </div>
</section>
